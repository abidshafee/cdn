    <!-- Blogger Widgets (for posts, comments, etc.) -->
    <b:section id="footer-widgets" class="footer-widgets"/>
    <!-- Scripts -->
    <b:section id="body-end"/>
    <!-- GDPR Cookie Consent Fallback for No-JS -->
